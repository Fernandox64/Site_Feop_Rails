<%- model_class = Edital -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @edital.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @edital.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
  <dd><%= @edital.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pdf_file_name) %>:</strong></dt>
  <dd><%= @edital.pdf_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pdf_content_type) %>:</strong></dt>
  <dd><%= @edital.pdf_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pdf_file_size) %>:</strong></dt>
  <dd><%= @edital.pdf_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pdf_updated_at) %>:</strong></dt>
  <dd><%= @edital.pdf_updated_at %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              editals_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_edital_path(@edital), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              edital_path(@edital),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
