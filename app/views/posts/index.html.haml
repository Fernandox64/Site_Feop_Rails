- if user_signed_in?
  %p#intro
    //= current_user.name
    //%br/
    %span
      Notícias
- else
  %p#intro
    //Bem vindo
    //%br/
    %span
      Notícias      
.container-fluid
  #posts
    - @posts.each do |post|
      .post
        .post_image
          = link_to (image_tag post.image.url(:small)), post
        .post_content
          .title
            %h2= link_to post.title, post
          .data.clearfix
            %p.username
              FEOP
            %p.buttons
              %span
                %i.fa.fa-comments-o
                = post.comments.count
              %span
                %i.fa.fa-thumbs-o-up
                = post.get_likes.size

